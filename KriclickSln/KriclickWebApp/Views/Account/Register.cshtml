@model KriclickWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutWithoutFooter.cshtml";
}

<style>
    #Google {
        background: #df4b38;
        display: block;
